<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => 'form-signin'}, :id => 'activation-form' do |f| %>
<%= f.hidden_field :reset_password_token %>

<h2 class="form-signin-heading"><%= image_tag 'logo.png' %></h2>
  <div class="login-wrap">
    <div class="user-login-info">
      <%= devise_error_messages! %>
      <%= f.password_field :password, :autofocus => true, :placeholder => "Nova Senha", class: "form-control placeholder-no-fix text-center" %></p>
      <%= f.password_field :password_confirmation, :placeholder => "Confirmar senha", class: "form-control placeholder-no-fix text-center" %></p>
    </div>
    <button class="btn btn-lg btn-login btn-block" type="submit">Alterar Senha</button>
    <div class="registration">
      minhagraduacao.com Â© 2016
    </div>
  </div>

<% end %>