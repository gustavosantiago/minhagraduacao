<div class="login-reg">

  <!-- Login Form -->
  <div class="login-reg-form">
    <%= link_to image_tag("LogoTopoLogin.png", class: "center-block img-responsive"), root_path %>

    <!-- Heading -->
    <br />
    <h4>Escolha como deseja acesar:</h4>
    <br />

    <%#= link_to omniauth_authorize_path(:user, :facebook), class: 'btn btn-primary btn-lg btn-block btn-face' do %>
      <!-- <i class="fa fa-facebook"></i> Facebook -->
    <%# end %> 
    <br />

    <%#= image_tag 'site/ou.png', class: 'or-line img-responsive center-block' %>
          
    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => 'form-horizontal', :role => 'form'}) do |f| %>
      <%= render 'layouts/site/shared/flash_message' %>
      <!-- Form Group -->
        <div class="form-group">
          <div class="col-xs-12">
            <!-- Input -->
            <%= f.email_field :email, autofocus: :true, placeholder: "Seu E-mail", class: 'form-control input-lg' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.password_field :password, placeholder: "Sua Senha", class: 'form-control input-lg' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <!-- Button -->
            <button type="submit" class="btn btn-primary btn-lg btn-block btn-green">Entrar</button>&nbsp;
          </div>
        </div>
        
        <div class="form-group">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <div class="col-xs-12 text-center">
              <a href="<%= new_user_registration_path %>" class="black">Criar nova conta</a> | <a href="<%= new_password_path(resource_name) %>" class="black">Esqueceu sua senha?</a>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>      