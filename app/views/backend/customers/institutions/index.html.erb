<div class="row">
  <div class="col-sm-12">
    <section class="panel">
      <header class="panel-heading">
        <span class="vertical-align-middle pull-left">(<%= @institutions.count %>) <%= @institutions.count > 1 ? "Instituições" : "Instituição" %></span>
      </header>
      <div class="panel-body">
       
        <table class="table table-hover table-bordered table-striped">
          <thead>
            <tr>
              <th>Sigla</th>
              <th>Nome</th>
              <th>Logo</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @institutions.each do |institution| %>
              <tr>
                <td><%= institution.sigla %></td>
                <td><%= institution.name %></td>
                <td class="hidden-xs">
                  <%- if institution.institution_profile then -%>
                    <span class="label label-success">Sim</span>
                  <%- else -%>
                    <span class="label label-danger">Não</span>
                  <%- end -%>
                </td>
                <td class="actions">
                  <div class="action-buttons">
                    <%= link_to edit_customers_institution_path(institution), class: 'table-actions' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </section>
  </div>
</div>