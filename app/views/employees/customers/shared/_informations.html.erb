<%= f.simple_fields_for :profile do |p| -%>
  <div class="form-group">        
    <%= p.label :name, 'Nome', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= p.input :name, label: false, input_html: { class: 'form-control' } %>
    </div>    
  </div> 
<% end %>

<div class="form-group">        
  <%= f.label :email, class: 'control-label col-md-2' %>
  <div class="col-md-10">
    <%= f.input :email, label: false, input_html: { class: 'form-control' } %>
  </div>    
</div> 

<div class="form-group">    
  <label class='control-label col-md-2'>Instituição</label>
  <div class="col-md-10">
    <select name="customer[institution_ids][]" class='form-control'>
    <option value="">Selecione uma instituição:</option>
      <% Institution.select('id,name,sigla').order(:sigla).each do |institution| %>
        <option value="<%= institution.id %>"><%= "#{institution.sigla} - #{institution.name}" %></option>
      <% end %>
    </select>
  </div> 
</div> 

<div class="form-group">
  <label class="control-label col-md-2"></label>
  <div class="col-md-7">
    <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
  </div>
</div>